            <button class="text-purple-600 hover:bg-yellow-300 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
            </button>
            <button class="text-purple-600 hover:bg-yellow-300 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
            </button>
            <button class="text-purple-600 hover:bg-yellow-300 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6"><rect width="18" height="18" x="3" y="3" rx="2"></rect><path d="M8 12h8"></path><path d="M12 8v8"></path></svg>
            </button>
            <button class="text-purple-600 hover:bg-yellow-300 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path></svg>
            </button>
            <button class="text-purple-600 hover:bg-yellow-300 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            </button>
        </div>
    </footer>

    <script>
        const products = [
            { id: 1, name: "Premium Subscription", price: 10, image: "https://via.placeholder.com/200" },
            { id: 2, name: "Digital Artwork", price: 25, image: "https://via.placeholder.com/200" },
            { id: 3, name: "Online Course", price: 50, image: "https://via.placeholder.com/200" },
            { id: 4, name: "E-book Bundle", price: 15, image: "https://via.placeholder.com/200" },
        ];

        const productsContainer = document.getElementById('products');
        const paymentModal = document.getElementById('paymentModal');
        const confirmationModal = document.getElementById('confirmationModal');
        const payButton = document.getElementById('payButton');
        const closeConfirmation = document.getElementById('closeConfirmation');
        const payAmount = document.getElementById('payAmount');
        const referenceNumber = document.getElementById('referenceNumber');

        function createProductCard(product) {
            const card = document.createElement('div');
            card.className = 'bg-yellow-50 border-purple-200 rounded-lg overflow-hidden';
            card.innerHTML = `
                <img src="${product.image}" alt="${product.name}" class="w-full h-48 object-cover">
                <div class="p-4">
                    <h3 class="text-purple-800 font-bold">${product.name}</h3>
                    <p class="text-sm text-purple-600">${product.price} PI</p>
                    <button class="w-full bg-purple-600 hover:bg-purple-700 text-yellow-100 font-bold py-2 px-4 rounded mt-2" onclick="handlePurchase(${product.id})">Buy Now</button>
                </div>
            `;
            return card;
        }

        products.forEach(product => {
            productsContainer.appendChild(createProductCard(product));
        });

        function handlePurchase(productId) {
            const product = products.find(p => p.id === productId);
            payAmount.textContent = product.price;
            paymentModal.style.display = 'block';
        }

        payButton.addEventListener('click', () => {
            paymentModal.style.display = 'none';
            setTimeout(() => {
                referenceNumber.textContent = Math.random().toString(36).substr(2, 9).toUpperCase();
                confirmationModal.style.display = 'block';
            }, 2000);
        });

        closeConfirmation.addEventListener('click', () => {
            confirmationModal.style.display = 'none';
        });

        window.onclick = function(event) {
            if (event.target == paymentModal) {
                paymentModal.style.display = "none";
            }
            if (event.target == confirmationModal) {
                confirmationModal.style.display = "none";
            }
        }
    </script>
</body>
</html>
