    <header class="bg-yellow-200 border-b border-purple-300">
        <div class="max-w-5xl mx-auto px-4 py-2 flex justify-between items-center">
            <h1 class="text-xl font-bold text-purple-800">PI Store</h1>
            <div class="flex items-center space-x-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-purple-600"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-purple-600"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
            </div>
        </div>
    </header>

    <main class="max-w-5xl mx-auto p-4">
        <div id="products" class="grid grid-cols-2 md:grid-cols-3 gap-4"></div>
    </main>

    <div id="paymentModal" class="modal">
        <div class="modal-content bg-yellow-50 border-purple-200 rounded-lg">
            <h2 class="text-xl font-bold text-purple-800 mb-4">Complete Your Purchase</h2>
            <p class="text-purple-600 mb-4">Enter your PI wallet address to complete the transaction.</p>
            <div class="mb-4">
                <label for="wallet" class="block text-purple-600 mb-2">PI Wallet</label>
                <input id="wallet" type="text" class="w-full p-2 border border-purple-300 rounded" placeholder="Enter wallet address">
            </div>
            <button id="payButton" class="bg-purple-600 hover:bg-purple-700 text-yellow-100 font-bold py-2 px-4 rounded">Pay <span id="payAmount"></span> PI</button>
        </div>
    </div>

    <div id="confirmationModal" class="modal">
